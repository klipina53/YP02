<Page x:Class="YP._02.Stranici.PrepodavatelNagruzka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP._02.Stranici"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrepodavatelNagruzka">

    <Page.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="0.611"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Page.Resources>

    <Page.Background>
        <ImageBrush ImageSource="..\Images\fon.jpg"/>
    </Page.Background>
    <Viewbox>
        <Grid Height="468" Width="833">
            <Grid Margin="638,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="159">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="..\Images\poisk.png" 
                   Width="20" 
                   Height="20" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="5,10,0,0"/>
                <TextBox x:Name="searchTextBox"
                     Height="20"
                     FontFamily="Microsoft YaHei"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="Поиск..."
                     BorderBrush="{x:Null}"
                     GotFocus="searchTextBox_GotFocus"
                     LostFocus="searchTextBox_LostFocus"
                     KeyDown="SearchTextBox_KeyDown" 
                     TextChanged="searchTextBox_TextChanged"
                     Opacity="0.73"
                     Margin="0,10,0,0"/>
            </Grid>
            <ListView x:Name="resultsListView"  
                  Margin="0,89,0,72" 
                  Opacity="0.611" 
                  Background="#FFC7C7C7" 
                  SelectionChanged="ListView_SelectionChanged" 
                  HorizontalAlignment="Center" 
                  Width="813">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="№" Width="50" DisplayMemberBinding="{Binding LoadID}"/>
                        <GridViewColumn Header="Дисциплина" Width="115">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisciplineID}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Группа" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding GroupID}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Количество часов&#xD;&#xA;         лекций" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding LectureHours}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Количество часов&#xA; для практических&#xA;         занятий" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PracticalHours}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Количество часов&#xD;&#xA; для консультаций" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ConsultationHours}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Количество часов&#xA;    для курсового&#xA;         проекта" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProjectHours}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Количество часов&#xA;     для экзамена" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ExamHours}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Добавить" 
                HorizontalAlignment="Left" 
                Margin="565,0,0,28" 
                Width="75" 
                Height="20" 
                VerticalAlignment="Bottom" 
                    Click="Add_Click"
                Style="{StaticResource RoundButtonStyle}"/>

            <Button Content="Удалить"  
                Margin="740,0,0,28" 
                Height="20" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left" 
                Width="75" 
                    Click="Delete_Click"
                Style="{StaticResource RoundButtonStyle}"/>

            <Button Content="Изменить"  
                HorizontalAlignment="Left" 
                Margin="652,0,0,28" 
                Width="75" 
                Height="20" 
                    Click="Update_Click"
                VerticalAlignment="Bottom" 
                Style="{StaticResource RoundButtonStyle}"/>

            <Button HorizontalAlignment="Left" 
                Margin="36,24,0,0" 
                VerticalAlignment="Top" 
                Width="37" 
                Height="30" 
                BorderBrush="{x:Null}" 
                Click="Back">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\back.png"/>
                </Button.Background>
            </Button>

            <Grid x:Name="hiddenPanel" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch" 
              Panel.ZIndex="1" 
              Visibility="Hidden">
                <Grid Background="White" 
                  Panel.ZIndex="2" 
                  MinWidth="300" 
                  MinHeight="300" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center" 
                  Height="413" 
                  Margin="266,29,253,26" 
                  Width="314">
                    <StackPanel Margin="10" Orientation="Vertical">

                        <Grid VerticalAlignment="Top" 
                          HorizontalAlignment="Stretch">
                            <Label x:Name="hiddenPanelTitle"  
                               Content="Добавление" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>
                            <Button Content="X" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Click="ClosePanel_Click" 
                                Margin="0,3" 
                                Width="21"/>
                        </Grid>

                        <!-- Правильное использование Label без вложенности -->
                        <Label Content="Дисциплина"/>
                        <ComboBox x:Name="DisciplineComboBox" Height="22" />

                        <Label Content="Группа"/>
                        <ComboBox x:Name="GroupComboBox" Height="22" />

                        <Label Content="Количество часов лекций"/>
                        <TextBox x:Name="LectureHoursTextBox" Height="22"/>

                        <Label Content="Количество часов для практических занятий"/>
                        <TextBox x:Name="PracticalHoursTextBox" Height="22"/>

                        <Label Content="Количество часов для консультаций"/>
                        <TextBox x:Name="ConsultationHoursTextBox" Height="22"/>

                        <Label Content="Количество часов для курсового проекта"/>
                        <TextBox x:Name="ProjectHoursTextBox" Height="22"/>

                        <Label Content="Количество часов для экзамена"/>
                        <TextBox x:Name="ExamHoursTextBox" Height="22"/>

                        <Button x:Name="hiddenPanelButton" 
                            Content="Добавить" 
                            Margin="0 10"  
                            Click="Save_Click"/>
                    </StackPanel>
                </Grid>

                <Grid VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" 
                  Background="Black" 
                  Opacity="0.4"/>
            </Grid>
        </Grid>
    </Viewbox>

</Page>