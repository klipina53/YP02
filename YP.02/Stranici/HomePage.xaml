<Page x:Class="YP._02.Stranici.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP._02.Stranici"
      mc:Ignorable="d" 
      Title="HomePage" >

    <Page.Background>
        <ImageBrush ImageSource="..\Images\fon.jpg" Stretch="UniformToFill"/>
    </Page.Background>
    <Viewbox>
        <Grid>
            <Button Content="Выход"  Width="100" Height="30" Margin="679,10,21,410" BorderBrush="{x:Null}" Opacity="0.36" Background="White" Click="Exit" Foreground="#FF0D34C8">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                        <!-- Добавляем CornerRadius -->
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Программа&#xD;&#xA;дисциплины" HorizontalAlignment="Left" Height="96" Margin="65,106,0,0" VerticalAlignment="Top" Width="145" Click="Discipline" Foreground="White" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Студенты" Foreground="White" Height="96" Margin="31,260,624,0" VerticalAlignment="Top" Click="Students" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="     Отчетность&#xD;&#xA; по дисциплине" HorizontalAlignment="Left" Foreground="White" Height="96" Margin="212,260,0,0" VerticalAlignment="Top" Width="146" Click="DiciplineReport" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="     Нагрузка&#xD;&#xA;преподавателя" Foreground="White" Height="96" Margin="591,106,65,0" VerticalAlignment="Top" Click="Nagruzka" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Консультации" Foreground="White" Height="96" Margin="451,260,214,0" VerticalAlignment="Top" Click="Konsultacii" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Пропуски занятий" HorizontalAlignment="Center" Foreground="White" Height="96" Margin="0,106,0,0" VerticalAlignment="Top" Width="145" Click="Propuski" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Оценки" Foreground="White" Height="96" Margin="655,255,10,0" VerticalAlignment="Top" Click="Mark" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/image 9 (1).png"/>
                </Button.Background>
            </Button>


        </Grid>
    </Viewbox>
</Page> 
