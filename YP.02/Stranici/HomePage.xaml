<Page x:Class="YP._02.Stranici.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP._02.Stranici"
      mc:Ignorable="d" 
      Title="HomePage" >

    <Page.Background>
        <ImageBrush ImageSource="..\Images\fon.jpg" Stretch="UniformToFill"/>
    </Page.Background>
    <Viewbox>
        <Grid>
            <Button Content="Выход"  Width="100" Height="30" Margin="679,10,21,410" BorderBrush="{x:Null}" Opacity="0.36" Background="White" Click="Exit" Foreground="#FF0D34C8">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                        <!-- Добавляем CornerRadius -->
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Программа&#xD;&#xA;дисциплины" HorizontalAlignment="Left" Height="96" Margin="65,79,0,0" VerticalAlignment="Top" Width="145" Click="Discipline" Foreground="White" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="     Отчетность&#xD;&#xA; по дисциплине" HorizontalAlignment="Center" Foreground="White" Height="96" Margin="0,210,0,0" VerticalAlignment="Top" Width="145" Click="DiciplineReport" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="     Нагрузка&#xD;&#xA;преподавателя" Foreground="White" Height="96" Margin="591,79,65,0" VerticalAlignment="Top" Click="Nagruzka" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Консультации" Foreground="White" Height="96" Margin="600,210,65,0" VerticalAlignment="Top" Click="Konsultacii" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Пропуски занятий" HorizontalAlignment="Center" Foreground="White" Height="96" Margin="0,79,0,0" VerticalAlignment="Top" Width="145" Click="Propuski" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Студенты" Foreground="White" Height="96" Margin="65,210,590,0" VerticalAlignment="Top" Click="Students" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Отчёт по должникам" Foreground="White" Height="94" Margin="65,344,590,0" VerticalAlignment="Top" Click="DebtReport" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Направление&#xD;&#xA;на пересдачу" Foreground="White" Height="96" Margin="328,344,328,0" VerticalAlignment="Top" Click="RetakeDirection" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="      Сводка&#xD;&#xA; посещаемости" Foreground="White" Margin="600,344,65,0" Click="AttendanceSummary" BorderBrush="{x:Null}" Height="96" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Viewbox>

</Page> 
