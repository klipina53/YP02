<Page x:Class="YP._02.Stranici.HomePageAdministration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP._02.Stranici"
      mc:Ignorable="d" 
      Title="HomePage" >
    <Page.Background>
        <ImageBrush ImageSource="..\Images\fon.jpg" Stretch="UniformToFill"/>
    </Page.Background>
    <Viewbox>
        <Grid>
            <Button Content="Выход"  Width="100" Height="30" Margin="679,10,21,410" BorderBrush="{x:Null}" Opacity="0.36" Background="White" Click="Exit" Foreground="#FF0D34C8">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                        <!-- Добавляем CornerRadius -->
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Дисциплина" HorizontalAlignment="Left" Height="96" Margin="130,105,0,0" VerticalAlignment="Top" Width="145" Click="Discipline" Foreground="White" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Учебные группы" Foreground="White" Height="96" Margin="0,260,400,0" Width="146" VerticalAlignment="Top" Click="Students" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="     Нагрузка&#xD;&#xA;преподавателя" Foreground="White" Height="96" Margin="0,260,0,0" Width="146" VerticalAlignment="Top" Click="Nagruzka" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Консультации" Foreground="White" Height="96" Margin="527,260,138,0" VerticalAlignment="Top" Click="Konsultacii" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Пропуски занятий" HorizontalAlignment="Left" Foreground="White" Height="96" Margin="330,105,0,0" VerticalAlignment="Top" Width="145" Click="Propuski" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="..\Images\image 9 (1).png"/>
                </Button.Background>
            </Button>
            <Button Content="Преподаватели" Foreground="White" Height="96" Margin="380,105,0,0" Width="145" VerticalAlignment="Top" Click="Prepods" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/image 9 (1).png"/>
                </Button.Background>
            </Button>


        </Grid>
    </Viewbox>
</Page> 
